<section id="index" class="section-with-bg fadeInUp">

	<div class="container">
		<div class="section-header">
			<h1>Nos offres</h1>
			<h6>Trouvez votre bonheur</h6>
		</div>
		
		<div class="row">
			<% @ads.each do |a| %>
			<div class="col col-6">
				<div class="card mb-5">
					<img class="card-img-top test" src="<%= a.image_url %>" alt="Card image cap">
					<div class="card-body">
						<h2 class="card-title"><%= a.title.truncate(29) %></h2>
						<hr>
						<div class="row">
							<div class="col col-6">
								<span class="card-text"><i>Localisation : </i><%= a.location %></span><br>
								<span class="card-text"><i>Société : </i><%= a.user.company.truncate(20) %></span><br>
							</div>
							<div class="col col-6">
								<span class="card-text"><i>Contrat : </i><%= a.contract %></span><br>
								<span class="card-text"><i>Expérience : </i><%= a.experience %></span>
							</div>
						</div>
						<hr>
					</div>
					<div class="card-footer">
						<% if  a.created_at.localtime.strftime("%d/%m/%y") == Time.now.strftime("%d/%m/%y") %>
						<small class="text-muted"><b>Mise en ligne : </b>Aujourd'hui à <%= a.created_at.localtime.strftime("%H:%M")%></small>
						<% elsif a.created_at.strftime("%d/%m/%y") == Time.now.yesterday.strftime("%d/%m/%y") %>
						<small class="text-muted"><b>Mise en ligne : </b>Hier à <%= a.created_at.localtime.strftime("%H:%M")%></small>
						<% else %>					
						<small class="text-muted"><b>Mise en ligne le : </b><%= a.created_at.localtime.strftime("%d/%m/%y") %> à <%= a.created_at.localtime.strftime("%H:%M")%></small>
						<% end %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</section>






<section id="connexion" class="text-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1>Changer mon mot de passe</h1>
        <hr>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field mb-3">
          <%= f.label :password, "Nouveau mot de passe" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "6 caractÃ¨res minimum", class: "form-control" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, "Confirmer votre nouveau mot de passe" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions mb-3">
          <%= f.submit "Changer mon mot de passe", class: "form-control btn devise-btn" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>

<section id="index" class="section-with-bg fadeInUp">
	<div class="container">
		<div class="row">
			<div class="col col-md-8 offset-md-2">
				<h2 class="h3 mb-3">Mes annonces</h2>
				<hr>
				<!-- If the current user doe'n have any ad yet, we change the text -->
				<% if current_user.ads[0] == nil %> 
				<div class="mt-4">
					<p>Vous n'avez pas encore d'annonces en ligne.</p>
				</div>
				<% else %> 
				<% current_user.ads.each do |ad| %>
				<%= link_to(edit_ad_path(ad.id)) do %>
				<div class="card flex-md-row no-gutters o-hidden mt-2 mb-2 text-default hover-shadow-3d">
					<div class="card-body d-flex flex-column col-auto p-3">
						<div class="mb-1">
							<p class="m-0 p-0">
								<span class="text-small text-primary m-0 p-0" style="font-style: italic;"><%= ad.created_at.localtime.strftime("%d/%m/%y %H:%M") %></span>
							</p>
						</div>
						<div class="flex-grow-1">
							<h5 class="m-0 mb-2 p-0"><%= ad.title %></h5>
							<div class="row">
								<div class="col col-3" style="font-style: italic;">
									<p class="m-0 p-0 text-muted">- <%= ad.location %></p>
									<p class="m-0 p-0 text-muted">- <%= ad.contract %></p>
								</div>
								<div class="col col-3" style="font-style: italic;">
									<p class="m-0 p-0 text-muted">- <%= ad.experience %></p>
									<p class="m-0 p-0 text-muted">- <%= ad.salary %> €</p>
								</div>
							</div>
							<p class="text-small mt-3 mb-0 p-0"><b>Aperçu : </b><%= ad.job_description.truncate(200) %>
							</p>
						</div>
					</div>
				</div>
				<% end %>
				<% end %>
				<% end %>		
			</div>		
		</div>
	</div>
</section>

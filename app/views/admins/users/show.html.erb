<section id="dashboard" class="text-light">
	<div class="container">
		<div class="row">
			<!-- Partial for the dashboard -->
			<%= render 'admins/dashboard' %>
			<!-- Profile -->
			<div class="col-sm-12 col-md-9">
				<div class="container">
					<!-- User ads -->
					<div class="row">
						<div class="col">
							<h4 class="mt-2"><i class="fas fa-sticky-note mr-2"></i>Annonce(s) de <%= @user.company %></h4>
							<hr>
							<% if @user.ads[0] == nil %> 
							<p>L'utilisateur n'a pas encore d'annonces en ligne.</p>
							<% else %> 
							<%= render 'user_ad_cards_admin_dashboard' %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
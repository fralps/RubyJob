<section class="mt-3">
    <div class="container">
        <div class="row">
            <!-- Partial for the dashboard -->
            <%= render 'admins/dashboard' %>

            <!-- Main content -->
            <div class="col-sm-12 col-md-9">
                <div class="container">
                    <!--Title -->
                    <div class="row">
                        <div class="col">
                            <h4 class="p-2 bg-primary-alt"><i class="fas fa-user-friends text-primary"></i> Modifier le profil utilisateur</h4>
                        </div>
                    </div>
                    <!-- Errors -->
                    <div class="row">
                        <div class="col mx-2">
                            <% if @user.errors.any? %>
                            <div class="alert alert-danger" role="alert">
                                <p>L'utilisateur ne peut pas être créer pour les raisons suivantes :</p>
                                <ul>
                                    <% @user.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                    <% end %>
                                </ul>
                            </div>
                            <% end %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mx-2">
                            <!-- Zone du formulaire -->
                            <%= user_avatar(@user.id, "avatar avatar-lg") %>

                            <%= form_tag user_avatars_path(@user.id), multipart: true, class: "btn btn-sm" do %>
                            <%= file_field_tag :avatar %>
                            <%= submit_tag "Mettre en ligne", class: "btn btn-success btn-sm mt-2" %>
                            <% end %>

                            <!-- Form zone  -->
                            <%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

                            <b><%= label_tag 'Son prénom' %></b>
                            <%= text_field_tag 'first_name', @user.first_name, class: "form-control"  %>
                            <br />

                            <b><%= label_tag 'Son nom' %></b>
                            <%= text_field_tag 'last_name', @user.last_name, class: "form-control" %>
                            <br />

                            <b><%= label_tag 'Sa description' %></b>
                            <%= text_area_tag 'description', @user.description, class: "form-control"  %>
                            <br />

                            <b><%= label_tag 'Ses compétences' %></b>
                            <%= text_field_tag 'skills', @user.skills, class: "form-control"  %>
                            <br />

                            <%= submit_tag "Editer", class: "btn btn-primary mb-3" %>
                            <% end %> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>